<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
       
        android:background="@android:color/black" >

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="save"
             android:layout_marginTop="10dip"
            android:background="@drawable/save"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:background="@drawable/fb_bg" >

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/linear1"
            android:orientation="vertical"
            android:padding="15dip" >

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dip"
                android:src="@drawable/u"
              
               />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilepic"
                android:text="Madhuri" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/profilepic"
                android:text="1234567890" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_toRightOf="@+id/profilepic"
                android:text="India" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country"
                android:fontFamily="@drawable/verdana"
                android:layout_toRightOf="@+id/profilepic"
                android:text="madhuri@gmail.com" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relat"
            android:layout_margin="10dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Would you like to add additional networks?" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relat" >

            <LinearLayout
                android:id="@+id/linearscroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/linear1"
                    android:orientation="horizontal"
                    android:paddingBottom="8dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="8dip" >

                    <ImageView
                        android:id="@+id/twt"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="40dip"
                        android:src="@drawable/tw_icon" />

                    <TextView
                        android:id="@+id/twtname"
                        android:textSize="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/twt"
                        android:layout_centerInParent="true"
                        android:text="link1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/linear1"
                    android:orientation="horizontal"
                    android:paddingBottom="8dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="8dip" >

                    <ImageView
                        android:id="@+id/ln"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="40dip"
                        android:src="@drawable/ln_icon" />

                    <TextView
                        android:id="@+id/lnname"
                        android:textSize="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ln"
                        android:layout_centerInParent="true"
                        android:text="link2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/linear1"
                    android:orientation="horizontal"
                    android:paddingBottom="8dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="8dip" >

                    <ImageView
                        android:id="@+id/gplus"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="40dip"
                        android:src="@drawable/gp_icon" />

                    <TextView
                        android:id="@+id/gplusname"
                        android:textSize="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gplus"
                        android:layout_centerInParent="true"
                        android:text="link3" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/linear1"
                    android:orientation="horizontal"
                    android:paddingBottom="8dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="8dip" >

                    <ImageView
                        android:id="@+id/fb"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="40dip"
                        android:src="@drawable/fb_icon" />

                    <TextView
                        android:id="@+id/fbname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fb"
                        android:textSize="10dip"
                        android:layout_centerInParent="true"
                        android:text="https://www.facebook.com/sri.niceguy"/>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>