<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:background="@android:color/black" >

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/save"
            android:text="save"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:background="@drawable/fb_bg" >

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/linear1"
            android:orientation="vertical"
            android:padding="15dip" >

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dip" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilepic"
                android:textColor="@android:color/black"
                android:text="Madhuri" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/profilepic"
                android:text="1234567890" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/profilepic"
                android:text="India" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_below="@+id/country"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/profilepic"
                android:text="madhuri@gmail.com" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:layout_margin="10dip" >

            <TextView
                android:id="@+id/addnetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Would you like to add additional networks?"
                android:textColor="@android:color/white" />
        </RelativeLayout>

       <ListView
        android:id="@+id/list"
        android:background="#5473b3"
        android:layout_margin="10dip"
        android:layout_below="@+id/relat"
        android:dividerHeight="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        
    </RelativeLayout>

</LinearLayout>